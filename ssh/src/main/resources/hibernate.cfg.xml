<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">false</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.useUnicode">true</property>
        <property name="connection.characterEncoding">utf8</property>
        <property name="connection.url">jdbc:mysql://yb.upc.edu.cn:3306/yibantest</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">yibantest</property>
        <property name="connection.password">yibantest</property>


        <mapping class="entity.ZflUserEntity"/>
    </session-factory>
</hibernate-configuration>